{
  "name": "idr-formatting",
  "version": "1.0.1",
  "description": "Tiny helpers to format and parse Indonesian-style prices (IDR) with '.' thousands and ',' decimals.",
  "keywords": [
    "idr",
    "currency",
    "rupiah",
    "indonesia",
    "format",
    "parse"
  ],
  "license": "MIT",
  "author": "Nandang S",
  "homepage": "https://github.com/netng/idr-formatting#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/netng/idr-formatting.git"
  },
  "bugs": {
    "url": "https://github.com/netng/idr-formatting/issues"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && tsup src/index.ts --format esm,cjs --dts --sourcemap --out-dir dist",
    "prepublishOnly": "npm run build",
    "clean": "rimraf dist",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@types/node": "^22.18.0",
    "rimraf": "^6.0.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^2.1.9"
  },
  "engines": {
    "node": ">=18"
  }
}
